DATAPATH=$BASEPATH/app/moskvafm
cd $DATAPATH

CHANNELFILE=$TMPFILE.channel

get_opt "File"
FILE="$opt"

[ -z "$FILE" ] && return 0

if ! expr "$FILE" : '/.*' > /dev/null; then
  FILE="$BASEPATH/$FILE"
fi

COLUMNCOUNT="columnCount=5"
STARTITEM="  startitem = \"middle\";"

echo "Content-type: text/xml"
echo
if [ -x "$XSLTPROC" ]; then
  $XSLTPROC ../collection/channel.xslt "$FILE" | sed '1d' > $CHANNELFILE
else
  awk -f getxml.awk -f ../collection/channel.awk "$FILE" > $CHANNELFILE
fi
(
  export CHANNELFILE; 
  export COLUMNCOUNT; 
  export STARTITEM;
  template2rss stations.xml
  rm -f $CHANNELFILE
)
